<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Deb3Sem3Morocho.Login">
    <ContentPage.Content>
      
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="LOGIN" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Grid>

                <Image Source="descarga.jpg"/>

            </Grid>


            <Entry x:Name="txtUsuario" Placeholder="Usuario" ></Entry>
            <Entry x:Name="txtPasword" Placeholder="Password" IsPassword="True"></Entry>

            <Button Text="Iniciar Sesion " Clicked="Button_Clicked" BackgroundColor="#2196F3" TextColor="White"></Button>
            <Label Text="" x:Name="lblResultado" TextColor="Aqua"></Label>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>